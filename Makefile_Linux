OBJS = src/main.cpp src/pugixml/pugixml.cpp src/interface/Interface.cpp src/interface/InterfaceButtons.cpp src/grid/Grid.cpp src/grid/bresenham/SetBresenham.cpp src/grid/bresenham/DrawBresenham.cpp src/grid/bresenham/DrawRevBresenham.cpp src/interface/Label.cpp src/interface/TextField.cpp src/interface/Button.cpp

CC = g++

LIBS = -L/usr/include/SDL2/SDL_image -L/usr/include/SDL2/SDL_ttf

COMPILER_FLAGS = -g -Wall

LINKER_FLAGS = -lSDL2 -lSDL2_image -lSDL2_ttf

OBJ_NAME = run

all : $(OBJ_NAME)

$(OBJ_NAME) : $(OBJS)
	$(CC) $(OBJS) $(LIBS) $(COMPILER_FLAGS) $(LINKER_FLAGS) -o $(OBJ_NAME)

clean :
	rm $(OBJ_NAME)